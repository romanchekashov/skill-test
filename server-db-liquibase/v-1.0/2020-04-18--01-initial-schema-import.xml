<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create_table_users" author="rchekashov">
        <createSequence sequenceName="users_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="users">
            <column name="id" type="bigint" defaultValueComputed="nextval(&apos;users_id_seq&apos;)">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="users"/>
            <dropSequence sequenceName="users_id_seq"/>
        </rollback>
    </changeSet>

    <changeSet id="create_table_decks" author="rchekashov">
        <createSequence sequenceName="decks_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="decks">
            <column name="id" type="bigint" defaultValueComputed="nextval(&apos;decks_id_seq&apos;)">
                <constraints primaryKey="true"/>
            </column>
            <column name="author_id" type="bigint"/>
            <column name="name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="preview_img" type="varchar(1024)"/>
        </createTable>

        <addUniqueConstraint columnNames="name, author_id"
                             constraintName="uk_decks_name_author_id"
                             tableName="decks"/>

         <addForeignKeyConstraint constraintName="fk_decks_to_users"
                                 baseTableName="decks"
                                 baseColumnNames="author_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <rollback>
            <dropTable tableName="decks"/>
            <dropSequence sequenceName="decks_id_seq"/>
            <dropUniqueConstraint constraintName="uk_decks_name_author_id"
                                  tableName="decks"/>
        </rollback>
    </changeSet>

    <changeSet id="create_table_cards" author="rchekashov">
        <createSequence sequenceName="cards_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="cards">
            <column name="id" type="bigint" defaultValueComputed="nextval(&apos;cards_id_seq&apos;)">
                <constraints primaryKey="true"/>
            </column>
            <column name="deck_id" type="bigint"/>
            <column name="question" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="answer" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="explanation" type="text"/>
        </createTable>

        <addUniqueConstraint columnNames="question, deck_id"
                             constraintName="uk_cards_question_deck_id"
                             tableName="cards"/>

         <addForeignKeyConstraint constraintName="fk_cards_to_decks"
                                 baseTableName="cards"
                                 baseColumnNames="deck_id"
                                 referencedTableName="decks"
                                 referencedColumnNames="id"/>

        <rollback>
            <dropTable tableName="cards"/>
            <dropSequence sequenceName="cards_id_seq"/>
            <dropUniqueConstraint constraintName="uk_cards_question_deck_id"
                                  tableName="cards"/>
        </rollback>
    </changeSet>

    <changeSet id="create_table_cards_translations" author="rchekashov">
        <createTable tableName="cards_translations">
            <column name="card_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="lang" type="varchar(8)">
                <constraints nullable="false"/>
            </column>
            <column name="default_lang" type="bool">
                <constraints nullable="false"/>
            </column>
            <column name="question" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="answer" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="explanation" type="text"/>
        </createTable>

        <addDefaultValue columnName="default_lang"
                         defaultValue="false"
                         tableName="cards_translations"/>

         <addForeignKeyConstraint constraintName="fk_cards_translations_to_cards"
                                 baseTableName="cards_translations"
                                 baseColumnNames="card_id"
                                 referencedTableName="cards"
                                 referencedColumnNames="id"/>

        <addPrimaryKey columnNames="card_id, lang"
                       constraintName="pk_card_id_lang"
                       tableName="cards_translations"/>

        <rollback>
            <dropTable tableName="cards_translations"/>
        </rollback>
    </changeSet>

</databaseChangeLog>